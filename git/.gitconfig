[user]
	name = Matt Crabtree
	email = m.crabtree@zohomail.eu
[core]
	excludesfile = ~/.gitignore
	autocrlf = false
	safecrlf = true
	eol = lf
[init]
	defaultBranch = master

# see also ~/.bash_aliases for more ... aliases
[alias]
    co = checkout
    cm = commit
    ss = status
    br = branch
    # hist = !git --no-pager log --pretty=format:'%C(auto)%h | %ad | %Cgreen%<(35,trunc)%s%C(auto)%<(30,trunc)%d%Cblue%al' --graph --date=short
    hist = !git --no-pager log --pretty --oneline --graph
    type = cat-file -t
    dump = cat-file -p
[color]
	ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan